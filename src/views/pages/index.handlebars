  <div id="mainContent" class="container-fluid py-3">
    <div class="row">
    <div class="col-sm-10 offset-sm-1 align-self-center">
      <div class="table-responsive-sm">
      <table class="table table-striped tablebody--scroll" id="table-releases">
        <thead>
          <tr>
            <th scope="col" class="th--noTopBorder"><span class="bumpR">{{dataTable_columnHeadings.[0]}}</span></th>
            <th scope="col" class="th--noTopBorder"><span class="bumpR">{{dataTable_columnHeadings.[1]}}</span></th>
            <th scope="col" class="th--noTopBorder"><span class="bumpR">{{dataTable_columnHeadings.[2]}}</span></th>
            <th scope="col" class="th--noTopBorder"><a class="a__filter" id="filterBtnStatus" tabindex="0" data-trigger="focus"><i class="fas fa-fw fa-filter"></i></a> {{dataTable_columnHeadings.[3]}}</th>
            <th scope="col" class="th--noTopBorder"><a class="a__filter" id="filterBtnApplications" tabindex="0" data-trigger="focus"><i class="fas fa-fw fa-filter"></i></a> {{dataTable_columnHeadings.[4]}}</th>
            <th scope="col" class="th--noTopBorder"><!-- Action --></th>
          </tr>
        </thead>
        <tbody>
          {{#each sampleReleases}}
          <tr>
            <td>{{title}}</td>
            <td>{{version}}</td>
            <td>{{date}}</td>
            <td><span class="badge badge__status--{{lowercase status}}">{{status}}</span></td>
            <td>{{#each applications}}<span class="badge badge__app">{{this}}</span> {{/each}}</td>
            <td>
              <div class="btn-group d-flex" role="group">
                <button type="button" class="btn btn-primary w-100 text-left">{{buttonText_default}}</button>
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                </button>
                <div class="dropdown-menu w-100">
                  {{#each ../buttonText_actions__release2}}
                  <a class="dropdown-item" href="#">{{this}}</a>
                  {{/each}}
                </div>
              </div>              
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      </div>
    </div>
